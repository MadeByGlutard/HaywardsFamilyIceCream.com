{
  "name": "haywardsfamilyicecream",
  "description": "HaywardsFamilyIceCream.com",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint . --fix --ignore-path .gitignore",
    "format": "prettier --write '**/*.{md,yml,yaml}'",
    "type-check": "tsc --noEmit",
    "start": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MadeByGlutard/HaywardsFamilyIceCream.com"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "gatsby": "^5.5.0",
    "gatsby-plugin-catch-links": "^5.5.0",
    "gatsby-plugin-emotion": "^8.5.0",
    "gatsby-plugin-image": "^3.5.0",
    "gatsby-plugin-lodash": "^6.5.0",
    "gatsby-plugin-manifest": "^5.5.0",
    "gatsby-plugin-sharp": "^5.5.0",
    "gatsby-plugin-sitemap": "^6.5.0",
    "gatsby-plugin-typography": "^5.5.0",
    "gatsby-source-filesystem": "^5.5.0",
    "gatsby-transformer-json": "^5.5.0",
    "gatsby-transformer-sharp": "^5.5.0",
    "gatsby-transformer-yaml": "^5.5.0",
    "prettier": "^2.8.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-typography": "^0.16.23",
    "typescript": "^5.1.3",
    "typography": "^0.16.21",
    "typography-theme-fairy-gates": "^0.16.19",
    "zod": "^3.21.4"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-var": "warn",
      "prefer-const": "error",
      "prefer-arrow-callback": "error",
      "no-empty": [
        "warn",
        {
          "allowEmptyCatch": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ],
      "react/prop-types": [
        "error",
        {
          "skipUndeclared": true
        }
      ],
      "no-console": "off",
      "react/display-name": "off",
      "react/react-in-jsx-scope": "off",
      "react/no-unescaped-entities": "off"
    },
    "overrides": [
      {
        "files": "gatsby-ssr.tsx",
        "rules": {
          "react/jsx-key": "off"
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "license": "ISC"
}
